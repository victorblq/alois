<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="blocksDescendants"
    android:padding="@dimen/pad_5">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/requestTimeLabel"
        android:text="@string/request_time_label"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/memoryRowTimeRequested"
        android:text="RequestTime"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/requestTimeLabel"/>

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="end"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_error_outline_black_24dp"
        android:id="@+id/memoryRequestListRowSign"
        android:layout_toLeftOf="@+id/memoryRequestListRowPopUpMenu"/>

    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/memoryRequestListRowPopUpMenu"
        android:layout_alignParentEnd="true"
        android:src="@drawable/ic_more_vert_black_24dp"
        android:layout_centerVertical="true"
        style="@style/Base.Widget.AppCompat.ActionButton"/>
</RelativeLayout>